    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush Color="#66000000" x:Key="PanelBackgroundThemeBrush"/>
            <SolidColorBrush Color="#AA000000" x:Key="ControlPanelBackgroundThemeBrush"/>
            <SolidColorBrush Color="#FFFEFEFE" x:Key="SliderThumbBackgroundThemeBrush"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush Color="#66FFFFFF" x:Key="PanelBackgroundThemeBrush"/>
            <SolidColorBrush Color="#AAFFFFFF" x:Key="ControlPanelBackgroundThemeBrush"/>
            <SolidColorBrush Color="#FF010101" x:Key="SliderThumbBackgroundThemeBrush"/>
