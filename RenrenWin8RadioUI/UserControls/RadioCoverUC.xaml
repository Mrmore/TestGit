<UserControl x:Class="RenrenWin8RadioUI.UserControls.RadioCoverUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="210" d:DesignWidth="360">
    
    <Grid x:Name="LayoutRoot">
        <Image x:Name="image" Stretch="Fill"></Image>
        <Grid x:Name="grid" Height="40" VerticalAlignment="Bottom">
            <Grid x:Name="gridC" Background="White" Opacity="0.4"></Grid>
            <TextBlock x:Name="tbTitle" Foreground="White" FontSize="23" VerticalAlignment="Center" TextAlignment="Center"/>
        </Grid>    
    </Grid>
</UserControl>