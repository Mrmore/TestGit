                                    </VisualStateGroup>

                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <ColorAnimation Duration="0:0:0.0" To="#B280d3cd" 
                                                        Storyboard.TargetProperty="(Control.Fill).(SolidColorBrush.Color)" 
                                                        Storyboard.TargetName="NormalGlyph"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ColorAnimation Duration="0:0:0.0" To="#cc00756d" 
                                                        Storyboard.TargetProperty="(Control.Fill).(SolidColorBrush.Color)" 
                                                        Storyboard.TargetName="NormalGlyph"/>
                                                <PointerDownThemeAnimation TargetName="border"/>
                                            </Storyboard>
                                        </VisualState>
